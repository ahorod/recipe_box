<h2>The recipe has the following ingredients</h2>

<ul>
  <% @my_ingredients.each() do |ingredient| %>
    <li><%= ingredient.name() %></a></li>
  <% end %>
</ul>
</ul>

<form  action="/add_ingredient/<%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class="row">
    <div class="col-md-6">
      <h3>Ingredients</h3>
      <% @ingredients.each() do |ingredient| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="ingredient_ids[]" value="<%= ingredient.id() %>"><%= ingredient.name()%>
          </label>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3>Tags</h3>
      <% @tags.each() do |tag| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="tags_ids[]" value="<%= tag.id() %>"><%= tag.name()%>
          </label>
        </div>
      <% end %>
    </div>
  </div>

  <div class="btn-group">
      <button class="btn btn-success" type="submit">Submit</button>
    </div>
</form>

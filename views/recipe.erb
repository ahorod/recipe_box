<h1> <%=@recipe.name() %></h1>

<h2>The recipe has the following ingredients</h2>
<h3>Ingredients</h3>
<ul>
  <% @my_ingredients.each() do |ingredient| %>
    <li><%= ingredient.name() %></a></li>
  <% end %>
</ul>
<h3>Tags</h3>
<ul>
  <% if @my_tags.any?() %>
  <% @my_tags.each() do |tag| %>
    <li><%= tag.name() %></a></li>
  <% end %>
  <% end %>
</ul>
<h3>Instructions</h3>

  <p><%= @recipe.instruction() %></p>
  

<form  action="/add_ingredient/<%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class="row">
    <div class="col-md-4">
      <h3>Ingredients</h3>
      <% @ingredients.each() do |ingredient| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="ingredient_ids[]" value="<%= ingredient.id() %>"><%= ingredient.name()%>
          </label>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <h3>Tags</h3>
      <% @tags.each() do |tag| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="tag_ids[]" value="<%= tag.id() %>"><%= tag.name()%>
          </label>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <label for="instructions">Instructions</label>
      <textarea class="form-control" rows="5" name="instructions"></textarea>
    </div>
  </div>

  <div class="btn-group">
      <button class="btn btn-success" type="submit">Submit</button>
    </div>
</form>
